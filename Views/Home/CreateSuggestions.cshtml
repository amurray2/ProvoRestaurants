@{
    ViewData["Title"] = "Create Suggestion";
}
@model Suggestions
@*Create Suggestions form page*@
<br /><br />
<div class="container">
    <div class="page-header">
        <h1>Enter a Suggestion</h1>
    </div>
</div>
<hr />
<br />
<div class="container justify-content-lg-center">
    <div class="col-10">
        <form method="post" asp-controller="Home" asp-action="CreateSuggestions">
            <!-- 2 column grid layout with text inputs for the first and last names -->
            <div class="row mb-5">
                <div class="col-5">
                    <div class="form-outline">
                        <input type="text" id="name" class="form-control" asp-for="Name" />
                        <label class="form-label" asp-for="Name">First and Last Name</label>
                    </div>
                </div>
                <div class="col-5">
                    <div class="form-outline">
                        <input type="text" id="restaurant-name" class="form-control" asp-for="RestaurantName"/>
                        <label class="form-label" asp-for="RestaurantName">Restaurant Name</label>
                    </div>
                </div>
            </div>
            <div class="row mb-5">
                <div class="col-5">
                    <div class="form-outline">
                        <input type="text" id="fav-dish" class="form-control" asp-for="FavoriteDish"/>
                        <label class="form-label" asp-for="FavoriteDish">Favorite Dish</label>
                    </div>
                </div>
                <div class="col-5">
                    <div class="form-outline">
                        <input type="text" id="phone" class="form-control" asp-for="Phone" />
                        <label class="form-label" asp-for="Phone">Restaurant Phone #</label>
                    </div>
                </div>
            </div>


            <!-- Submit button -->
            <div class="row">
                <div class="col-3">
                    <button type="submit" class="btn btn-primary btn-block mb-4">Submit</button>
                </div>
            </div>
            <div asp-validation-summary="All"></div>
            
        </form>
    </div>

</div>
